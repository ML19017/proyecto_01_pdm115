<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/brand"/>
    <EditText
        android:id="@+id/editTextItemIdBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID MARCA"
        android:minHeight="48dp"
        android:inputType="number"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/route_of_administration"/>
    <EditText
        android:id="@+id/editTextItemIdROA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID VIA DE ADMINISTRACION"
        android:minHeight="48dp"
        android:inputType="number"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subcategory"/>
    <EditText
        android:id="@+id/editTextItemIdSubCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID SubCategoria"
        android:minHeight="48dp"
        android:inputType="number"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pharmaceutical_form"/>
    <EditText
        android:id="@+id/editTextItemPharmaceuticalForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID FORMA FARMACEUTICA"
        android:minHeight="48dp"
        android:inputType="number"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item"/>
    <EditText
        android:id="@+id/editTextItemId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID ARTICULO "
        android:minHeight="48dp"
        android:inputType="number"/>
    <EditText
        android:id="@+id/editTextItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del articulo "
        android:minHeight="48dp" />
    <EditText
        android:id="@+id/editTextItemDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripcion del articulo "
        android:minHeight="48dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="restricted:"
            android:textAlignment="center"
            />
        <CheckBox
            android:id="@+id/checkBoxItemRestricted"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Price:"
            android:textAlignment="center"
            />
        <EditText
            android:id="@+id/editTextItemPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:inputType="numberDecimal"
            android:hint="0.00"
            android:minHeight="48dp" />

    </LinearLayout>
    <Button
        android:id="@+id/btnGuardarArticulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save" />

    <Button
        android:id="@+id/btnLimpiarArticulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clear"
        android:layout_marginTop="8dp" />
</LinearLayout>
