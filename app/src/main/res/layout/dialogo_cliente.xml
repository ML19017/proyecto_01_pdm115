<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtIdCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/client_id_hint"
            android:inputType="number"
            android:enabled="false" /> <!-- ID suele ser no editable -->

        <EditText
            android:id="@+id/edtNombreCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/client_name_hint"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/edtTelefonoCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/client_phone_hint"
            android:inputType="phone"
            android:maxLength="8"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/edtCorreoCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/client_email_hint"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />

        <!-- Added Buttons for Save and Clear -->
        <Button
            android:id="@+id/btnGuardarCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnLimpiarCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clear"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>
